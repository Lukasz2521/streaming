<div class="register">
    <div class="register-log">
        <img src="assets/img/sound-waves.png" alt="">
    </div>
    <div class="registration-wrapper">
        <form>
            <button type="submit">zajrejestruj się przez facebooka</button>
        </form>
        <div>
            <p>Lub zarejestruj się przy użyciu adresu E-mail</p>
        </div>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.TextAreaFor(x => x.UserName, new { @placeholder = "Nazwa użytkownika" })
            @Html.PasswordFor(x => x.Password, new { @placehoder = "Hasło" })
            @Html.PasswordFor(x => x.ConfirmPassword, new { @placeholder = "Powtórz hasło" })
            @Html.TextBoxFor(x => x.Email, new { @placeholder = "E-mail" })
            @Html.TextBoxFor(x => x.Email, new { @placeholder = "Potwierdź e-mail" })

            <label for="">Data urodzenia</label> 
            <fieldset>
                @Html.TextBoxFor(x => x.DayOfBirth, new { @type = "number", @maxlength = 2, @min = 1, @max = 31, @placeholder = "Dzień"})
                
                <select>
                    <option value="" selected disabled>miesiąc</option>
                    <option value="01">styczeń</option>
                    <option value="02">luty</option>
                </select>
                @Html.TextBoxFor(x => x.DayOfBirth, new { @type = "number", @maxlength = 4 ,@placeholder = "Rok" })
                <input type="number" maxlength="4" name="" value="" placeholder="Rok">
            </fieldset>
            <fieldset>
                <input id="man-gender" type="radio" name="gender" value="m">
                <label for="man-gender"><span></span> Mężczyzna</label>
                <input id="woman-gender" type="radio" name="gender" value="k">
                <label for="woman-gender"><span></span> Kobieta</label>
            </fieldset>
            <button type="submit">zarejestruj się</button>
        }

        <form>
        </form>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
