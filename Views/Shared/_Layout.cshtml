<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href='https://fonts.googleapis.com/css?family=Nunito' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" 3 href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet"3 href="~/Content/sass/main.min.css" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header class="container-fluid main">
        <div class="row">
           @Html.Action("Menu", "Account")
        </div>
    </header>
    <div class="container-fluid body-content">
        <div id="login-popup" class="modal fade login-popup"  tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <form class="form-horizontal" action="/" method="post">
                            <input class="form-control" type="text" name="name" value="" placeholder="Nazwa użytkownika" />
                            <input class="form-control" type="text" name="name" value="" placeholder="hasło" />
                            @Html.ActionLink("Zarejestruj się!", "Register", "Account",null , new { @class = "register-link" })
                            <input class="btn btn-default login-btn" type="submit" name="name" value="Zaloguj" />
                        </form>
                    </div>
                </div>
            </div>
        </div>

        @RenderBody()
        <footer>
           
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
