@using streaming_inż 

<main class="main">
    <div class="row">
        <div class="col-md-12">
            <div id="carousel-example-generic" class="promotional-baners carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <div class="item-wrapper">
                            <h1>Muzyka dla Ciebie</h1>
                            <h2>Gdziekolwiek jesteś</h2>
                            <button class="btn-p1">
                                Rejestracja
                            </button>
                        </div>
                    </div>
                    <div class="item">
                        <div class="item-wrapper">
                            <h1>Rób co chcesz!</h1>
                            <div>Dziel się muzyką!</div>
                            <div>Lub słuchaj innych!</div>
                        </div>
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <section class="col-md-12 promo-p2">
                <h1 class="text-p2">Odkryj niespotykane możliwości</h1>
                <div class="row">
                    <div class="col-md-4">
                        <div class="thumbnail">
                            <img src="@Helpers.GetImage("network.png")" alt="...">
                            <div class="caption">
                                <h3>Udostępniaj</h3>
                                <p>Dziel się swoją muzyką</p>
                                <p><a href="#" class="btn btn-default" role="button">Więcej</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="thumbnail">
                            <img src="@Helpers.GetImage("headphones.png")" alt="...">
                            <div class="caption">
                                <h3>Słuchaj</h3>
                                <p>Odtwarzaj muzyke z dowolnego urządzenia</p>
                                <p><a href="#" class="btn btn-default" role="button">Więcej</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="thumbnail">
                            <img src="@Helpers.GetImage("network.png")" alt="...">
                            <div class="caption">
                                <h3>Pobieraj</h3>
                                <p>Pobieraj całe utwory lub fragmenty</p>
                                <p><a href="#" class="btn btn-default" role="button">Więcej</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            <div/>
        </section>
    </div>
</main>
<div class="promo-p3">
    <div class="container">
        <div class="row">
            <section class="col-md-12">
                <h1>Załóż konto i korzystaj z dowolnego urządzenia</h1>
                <div class="col-md-4 padding-reset">
                    <img src="@Helpers.GetImage("iPad-PNG-HD.png")" alt="" />
                </div>
                <div class="col-md-4 padding-reset">
                    <img src="@Helpers.GetImage("Apple-IPhone-PNG-Clipart.png")" alt="" />
                </div>
                <div class="col-md-4 padding-reset">
                    <img src="@Helpers.GetImage("leopard.png")" alt="" />
                </div>
            </section>
        </div>
    </div>
</div>
<footer>
    <p>Streaming 2017 &copy;</p>
</footer>