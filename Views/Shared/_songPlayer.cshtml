<div id="song-player" class="song-player col-md-12">
    <div class="row">
        <div class="player-control col-md-2">
            <div class="wrapper">
                <button onclick="Player.skipPrevious();" id="prev">
                    <i class="icon-back"></i>
                </button>
                <button onclick="Player.toggle();">
                    <i class="icon-play-button"></i>
                </button>
                <button onclick="Player.skipNext();" id="next">
                    <i class="icon-next"></i>
                </button>
            </div>
        </div>
        <div class="col-md-1">
            <span class="song-time" id="currentTime">
            </span>
        </div>
        <div class="progress-container col-md-4">
            <div id="player-slider"></div>
        </div>
        <div class="col-md-1">
            <span class="song-time" id="songDuration">
            </span>
        </div>
        <div class="col-md-2">
            <button id="extract-btn" class="extract-file btn btn-p2">
                wytnij fragment
            </button>
        </div>
        <div class="volume-container col-md-1">
            <div id="volume-control" class="wrapper volume volume-control">
                <div id="player-volume"></div>
            </div>
            <i class="icon-speaker volume"></i>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-2">
            <span class="song-time" id="amount"></span>
        </div>
        <div class="progress-container col-md-5">
            <div id="extract-slider"></div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-1">
            <a id="download-sample" class="extract-file btn btn-p2" download="eee.mp3" target="_blank" href="">Generuj fragment</a>
        </div>
        <div class="col-md-1">
            <a id="download-sample" class="extract-file btn btn-p2" download="eee.mp3" target="_blank" href="">pobier</a>
        </div>
    </div>
</div>
