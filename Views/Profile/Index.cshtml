@model  List<streaming_inż.Models.UserSongs>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<article class="col-md-8" style="margin-top: 20px;">
    <div class="row">
        @foreach (var song in Model)
        {
            <section class="col-md-12 single-audio">
                <div class="col-md-4 col-sm-4 audio-avatar" style="background-image: url('@song.avatarPath');">
                
                </div>
                <div class="col-md-7 col-sm-7">
                    <div class="music-details">
                        <button class="play-btn" title="Play"></button>
                        <span class="song-owner"><a href="#">@song.UserName</a></span>
                    </div>
                    <h1 class="song-title">@song.Title</h1>
                    <span class="elapsed-time">@song.UploadTime</span>
                </div>
            </section>
        }
    </div>
</article>

